{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "./dist",
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "rewriteRelativeImportExtensions": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": ["src", "tests"],
  "exclude": ["dist"],
}
